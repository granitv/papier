{% extends 'public/comp/base.html.twig' %}
{% block body %}
    <h1>Collection Base</h1>
    <div class="row justify-content-around">
        <div id="myModal" class="modal">
            <span class="close">&times;</span>
            <img class="modal-content" id="img01">
            <div id="caption"></div>
        </div>
    {% for coll in allColl %}

            <div class="col-md-4 p-4">
                <div class="card p-4" >
                    <div class="row">
                    {% for img in coll.image  %}
                        {% if loop.first %}
                            <img class="myImg" src="{{ img.url }}" alt="{{ coll.name }}" style="width:100%;max-width:300px">
                            {% else %}
                                <img class="myImg" src="{{ img.url }}" alt="{{ coll.name }}" style="width:30%;margin: 4px; border-radius: 5%">
                        {% endif %}

                    {% endfor %}
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">{{ coll.name }}</h5>
                        <p class="card-text">{{ coll.description }}</p>
                        <p class="card-text">{{ coll.price }} â‚¬</p>
                        <a href="{{ path('collection',{id: coll.id}) }}" class="btn btn-primary">Read More</a>
                    </div>
                </div>
            </div>
    {% endfor %}
    </div> {#one part#}
{% endblock %}
{% extends'public/comp/base.html.twig' %}
{% block body %}
    <div class="row justify-content-center">
<span hidden id="OrderType">{% if oneEditOrder.coll is null %}P{% else %}B{% endif %}</span>
        <div class="col-md-6">
            {{ form_start(editOrderForm) }}
            <label>Type: <ul hidden>{% for t in allType %}
                        <span id="typeID{{ t.id }}">{{ t.price }}</span>
                        <span id="typeDescID{{ t.id }}">{{ t.description }}</span>
                    {% endfor %}</ul></label>
            {{ form_widget(editOrderForm.typee) }}
            <p  id="TypeDesc"></p>
            <label>Width:</label>
            {{ form_widget(editOrderForm.width) }}
            <label>Hight:</label>
            {{ form_widget(editOrderForm.height) }}
            {% if oneEditOrder.text is null %} <div class="row justify-content-end"> <span class="btn-sm btn-info m-2" id="addtext">Add text:</span><br></div>{% endif %}

            <div id="addtextfield" {% if oneEditOrder.text is null %}  style="display: none;" {% endif %} ><label>Text:</label>
                {{ form_widget(editOrderForm.text,{
                    'attr':
                    {
                        'placeholder': 'Text'
                    }
                }) }}</div>
            <div {% if coll is not null %} hidden {% endif %}>
                <label>File:</label>
                {{ form_errors(editOrderForm.file_url) }}
                {{ form_widget(editOrderForm.file_url) }}
</div>
            <label>Recouvrement des laizes:</label>
            {{ form_widget(editOrderForm.overlapping) }}
            <label>Quantity:</label>
            {{ form_widget(editOrderForm.quantity) }}
            <div class="row justify-content-between p-4">
                <div class="text-dark" style="font-size: x-large">
                    Total: <span id="totalPrice">{{ oneEditOrder.totalPrice/100|number_format(2) }}</span> â‚¬
                </div>
                <div>
                    {{ form_widget(editOrderForm.order, {
                        'label' : 'Edit',
                        'attr': {
                            'class': 'btn btn-success'}
                    })
                    }}

                </div>
            </div>
            {{ form_end(editOrderForm) }}
        </div>
    </div>
{% endblock %}